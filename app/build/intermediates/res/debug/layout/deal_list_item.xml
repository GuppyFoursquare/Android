<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card"
    android:padding="5dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_deal_list_item"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/title_deal_list_item"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/image_deal_list_item"
        android:layout_toEndOf="@+id/image_deal_list_item"
        android:layout_marginBottom="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/info_deal_list_item"
        android:layout_below="@+id/title_deal_list_item"
        android:layout_toRightOf="@+id/image_deal_list_item"
        android:layout_toEndOf="@+id/image_deal_list_item"
        android:layout_marginBottom="6dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/text_deal_list_item"
        android:layout_below="@+id/info_deal_list_item"
        android:layout_toRightOf="@+id/image_deal_list_item"
        android:layout_toEndOf="@+id/image_deal_list_item" />
</RelativeLayout><!-- From: file:/home/orxan/AndroidStudioProjects/Android/app/src/main/res/layout/deal_list_item.xml -->