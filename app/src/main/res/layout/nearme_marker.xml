<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_margin="20dp"
    android:layout_height="wrap_content"
    android:background="@android:drawable/screen_background_dark">




    <TextView
        android:layout_alignParentTop="true"
        android:id="@+id/nearmeinfo_placename"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        />
    <TextView
        android:id="@+id/nearmeinfo_placerate"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/nearmeinfo_placename"
        android:layout_centerVertical="true"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_height="wrap_content"
        />
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/marker_img"
        android:layout_width="wrap_content"
        android:layout_below="@+id/nearmeinfo_placename"
        android:layout_height="wrap_content"
        android:src="@drawable/place_detail_image_placeholder"/>

</RelativeLayout>