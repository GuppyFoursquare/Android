<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_info_bubble"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/nearmemarker_plc_img"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginRight="5dp"
        android:adjustViewBounds="true"
        android:src="@drawable/place_detail_image_placeholder"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/nearmeinfo_placename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="sample text"
            android:textColor="#ff000000"
            android:textSize="14dp"
            android:textStyle="bold" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/nearmeinfo_rate_label"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Rating :"
                android:layout_height="wrap_content"
                android:textColor="#ff7f7f7f"
                android:layout_marginRight="3dp"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/nearmeinfo_placerate"
                android:layout_toRightOf="@+id/nearmeinfo_rate_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0.0/5.0"
                android:background="#04a968"
                android:padding="3dp"
                android:textStyle="bold"
                android:layout_marginRight="3dp"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>